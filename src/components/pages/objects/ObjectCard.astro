---
import { ROUTES } from '../../../utils/const'

interface Props {
  preview: string
  id: number
  title: string
}

const { id, preview, title } = Astro.props
---

<div class="objects__item item-object">
  <div>
    <img src={preview} width="100%" height="100%" alt="Фото объекта строительства" />
  </div>
  <h6 class="item-object__title">
    <a class="item-object__link" href={ROUTES.OBJECTS + id}>
      {title}
    </a>
  </h6>
</div>
